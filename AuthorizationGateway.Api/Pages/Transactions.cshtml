@page
@model AuthorizationGateway.Api.Pages.TransactionsModel
@{
    ViewData["Title"] = "Transactions";
}

<h1 class="mb-4">Transactions</h1>

<form method="post" class="mb-3 d-flex align-items-center">
    <input asp-for="SearchId" class="form-control me-2" placeholder="Enter Transaction ID (GUID)" />
    <button type="submit" class="btn btn-primary">Search</button>
    <a href="/Transactions" class="btn btn-secondary ms-2">Clear</a>
</form>

@if (Model.Transactions == null || !Model.Transactions.Any())
{
    <div class="alert alert-info">No transactions found.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Status</th>
                <th>Masked PAN</th>
                <th>Masked Track 2</th>
                <th>Created</th>
                <th>Authorized</th>
                <th>Reason</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tx in Model.Transactions)
            {
                <tr>
                    <td>@tx.TransactionId</td>
                    <td>@tx.Status</td>
                    <td>@tx.MaskedPan</td>
                    <td>@tx.MaskedTrack2</td>
                    <td>@tx.CreatedAtUtc.ToString("u")</td>
                    <td>@tx.AuthorizedAtUtc.ToString("u")</td>
                    <td>@tx.Reason</td>
                </tr>
            }
        </tbody>
    </table>
}